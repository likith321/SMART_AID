<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnosis"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"/>

        <!-- Disease name box (top-right) -->
        <TextView
            android:id="@+id/tv_disease_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possible Disease"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_disease_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:background="#250000"
            android:textColor="#FF6B6B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:backgroundTint="#220000"
            android:layout_toEndOf="@+id/tv_title"/>

        <!-- Criticality -->
        <TextView
            android:id="@+id/label_criticality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criticality:"
            android:textColor="#8FD6FF"
            android:textStyle="bold"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_criticality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_criticality"
            android:layout_alignBaseline="@id/label_criticality"
            android:layout_marginStart="8dp"
            android:textColor="#8FD6FF"
            android:text="—"
            android:textSize="16sp"/>

        <!-- Immediate steps header -->
        <TextView
            android:id="@+id/label_immediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Immediate Steps:"
            android:textColor="#7CFF9A"
            android:textStyle="bold"
            android:layout_below="@id/label_criticality"
            android:layout_marginTop="18dp" />

        <!-- A vertical container where we will populate up to several bullets (or the returned text) -->
        <LinearLayout
            android:id="@+id/container_immediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/label_immediate"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">
            <!-- Will be filled programmatically -->
            <TextView
                android:id="@+id/tv_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#7CFF9A"
                android:textSize="15sp"
                android:paddingBottom="6dp"/>
        </LinearLayout>

        <!-- Worsen header -->
        <TextView
            android:id="@+id/label_worsen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What to do if symptoms worsen:"
            android:textColor="#FF6B6B"
            android:textStyle="bold"
            android:layout_below="@id/container_immediate"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/container_worsen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/label_worsen"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_worsen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FF6B6B"
                android:textSize="15sp"
                android:paddingBottom="6dp"/>
        </LinearLayout>

        <!-- Small disclaimer -->
        <TextView
            android:id="@+id/tv_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer: This AI-based guidance is informational only. In emergencies call local emergency services."
            android:textColor="#FFD1D1"
            android:textSize="12sp"
            android:layout_below="@id/container_worsen"
            android:layout_marginTop="8dp"
            android:padding="6dp" />

        <!-- Retry button -->
        <Button
            android:id="@+id/button_retry"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Retry"
            android:layout_below="@id/tv_disclaimer"
            android:layout_marginTop="12dp"
            android:backgroundTint="#5ECDFF"
            android:textColor="#000000"/>

        <!-- Progress bar overlay near the bottom -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/button_retry"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

    </RelativeLayout>
</ScrollView>
